@model IEnumerable<WebApplication1.Models.AnyList>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="AnyListCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.ActionLink("Edit", "AnyListEdit", new { Id = item.Id }) |
                @Html.ActionLink("Details", "AnyListDetail", new { Id = item.Id }) |
                @Html.ActionLink("Delete", "AnyListDelete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
